@page
@model WebApplicationCarRazorPages.Pages.Admins.ViewCustomerModel

@{
    ViewData["Title"] = "ViewCustomer";
}

<h2 class="tabledata">Kundöversikt</h2>

<button class="button function">
    <a asp-page="CreateCustomer">Lägg till en ny kund</a>
</button>
<table class="tabledata">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].LastName)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td class="tabledata">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
                <td class="tabledata">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                <td class="tabledata">
                    @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="tabledata">
                @Html.DisplayFor(modelItem => item.Password)
            </td>
                <td class="tabledata">
                    <button class="small button function">
                    <a asp-page="./EditCustomer" asp-route-id="@item.CustomerId">Ändra kund</a>
                    </button>
            </td> 
            <td class="tabledata">
                    <button class="small button negative function">
                    <a asp-page="./DeleteCustomer" asp-route-id="@item.CustomerId">Radera</a>
                    </button>
                
            </td>
        </tr>
}
    </tbody>
</table>
<button class="button function">
<a asp-page="./StartIndex">Tillbaka till översikt</a>
</button>
