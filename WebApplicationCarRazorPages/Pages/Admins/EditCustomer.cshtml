@page
@model WebApplicationCarRazorPages.Pages.Admins.EditCustomerModel

@{
    ViewData["Title"] = "EditCustomer";
}

<h2 class="tabledata">Ändra kund</h2>


<hr />
<div class="tabledata">
   
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <input asp-for="Customer.FirstName" class="form-control input-form" placeholder="Ändra förnamn" />
                <span asp-validation-for="Customer.FirstName" ></span>
            </div>

            <div class="form-group">
                <input asp-for="Customer.LastName" class="form-control input-form" placeholder="Ändra efternamn" />
                <span asp-validation-for="Customer.LastName"></span>
            </div>

            <input type="hidden" asp-for="Customer.CustomerId" />

            <div class="form-group">
                <input asp-for="Customer.Email" class="form-control input-form" placeholder="Ändra e-postadress" />
                <span asp-validation-for="Customer.Email"></span>
            </div>

            <div class="form-group">
                <input asp-for="Customer.Password" class="form-control input-form" placeholder="Ändra lösenord" />
                <span asp-validation-for="Customer.Password"></span>
            </div>

            <div>
                <input type="submit" value="Spara" class="small button function" />
            </div>
        </form>
    </div>


<button class="button function">
    <a asp-page="./ViewCustomers">Tillbaka till kundöversikt</a>
</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
