@page
@model WebApplicationCarRazorPages.Pages.Bookings.CustomerConfirmedBookingModel

@{
    ViewData["Title"] = "CustomerConfirmedBooking";
    @if (!string.IsNullOrEmpty(ViewData["GenericMessage"] as string))
    {
        <div class="alert alert-info">
            @ViewData["GenericMessage"]
        </div>
    }
}

<h2 class="tabledata">Bokningsbekräftelse</h2>

<h4 class="tabledata">Tack för din bokning!
    Du hittar dina bokningar på din kundprofil och kan radera bokningen till senast dagen innan din hyrperiod startar.
    
</h4>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            
                <input type="hidden" asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input type="hidden" asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <div class="form-group">
              
                <input type="hidden" asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
              
                <input type="hidden" asp-for="Customer.Password" class="form-control" />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="button function">Tillbaka till översikt</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
